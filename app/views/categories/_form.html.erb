<% if @category.errors.any? %>
  <h2> Following errors prevented article from getting created </h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @category do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
   <%= f.submit %>
  </p>
<% end %>

<%= link_to 'View other categories', categories_path, class: "btn btn-primary btn-sm" %>