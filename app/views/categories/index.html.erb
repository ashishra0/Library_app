<div class="page-header">
  <h1>Listing all categories</h1>
</div>

<div class="row">
<% @category.each do |category| %>
  <div class="col-md-3">
    <div class="well">
      <div class="caption">
        <h3><%= link_to "#{category.name}", category_path(category) %></h3>
        <span class="badge"><%= category.books.count %></span>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= render 'layouts/paginate', obj: @category %>