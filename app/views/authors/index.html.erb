<div class="page-header">
  <h1>Showing authors</h1>
</div>

<div class="row">
  <% @author.each do |author| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= image_tag("simon.jpeg") %>
      <div class="caption">
        <h3><%= author.name %></h3>
        <p>Summary will be added soon</p>
        <p><%= link_to 'view profile', author_path(author), class: "btn btn-primary" %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= render 'layouts/paginate', obj: @author %>