<% if @book.errors.any? %>
  <h2> Following errors prevented article from getting created </h2>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @book do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
   <%= f.submit %>
  </p>
<% end %>

<%= link_to 'View more books', books_path, class: "btn btn-primary btn-sm" %>